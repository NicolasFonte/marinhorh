<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://192.168.1.206:3306/marinhorh</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password"></property>
    <property name="show_sql">true</property>
    <property name="format_sql">true</property>
    <property name="hibernate.hbm2ddl.auto">update</property>
    <mapping class="com.rochamarinho.model.Advogado"/>
    <mapping class="com.rochamarinho.model.Filial"/>
    <mapping class="com.rochamarinho.model.Taxa"/>
    <mapping class="com.rochamarinho.model.Pagamento"/>
    <mapping class="com.rochamarinho.model.ValorMes"/>
    
  </session-factory>
</hibernate-configuration>
